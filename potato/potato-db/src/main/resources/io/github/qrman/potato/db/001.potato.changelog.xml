<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="001" author="qrman">
    <createTable schemaName="potato_schema"  tableName="potato_transaction">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="origin" type="varchar(256)">
        <constraints nullable="false"/>
      </column>
      <column name="transaction_date" type="timestamp">
        <constraints nullable="false" />
      </column>
    </createTable>
    
    <createTable schemaName="potato_schema"  tableName="potato_transaction_position">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="transaction" type="bigint">
        <constraints foreignKeyName="FK_position__potato" references="potato_schema.potato_transaction(id)" />
      </column>
      <column name="loads" type="bigint">
        <constraints nullable="false" unique="true" />
      </column>
      <column name="price" type="numeric(19,2)">
        <constraints nullable="false" unique="true" />
      </column>
    </createTable>

    <sql>ALTER SEQUENCE potato_schema.potato_transaction_id_seq RESTART WITH 1001</sql>

  </changeSet>

</databaseChangeLog>